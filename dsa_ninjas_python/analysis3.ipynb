   "source": [
    "# optimized solution to find x^n\n",
    "def power(x, n):\n",
    "    if n == 0:\n",
    "        return 1\n",
    "    if n % 2 == 0:\n",
    "        return power(x, n / 2) ** 2\n",
    "    else:\n",
    "        return x * power(x, n // 2) ** 2\n",
    "\n",
    "\n",
    "power(2, 5)\n"
   ]
  }
